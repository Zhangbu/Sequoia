cron: false
data_dir: "stock_data_cache" # Ensure this matches CACHE_DIR in data_fetcher_new.py

# Push notifications settings
push:
  enable: true
  wxpusher_uid: "your_wxpusher_uid_here" # Replace with your actual UID
  wxpusher_token: "your_wxpusher_token_here" # Replace with your actual Token

# Mail notifications settings
mail:
  enable: false
  smtp_server: "smtp.163.com"
  from_addr: 'your_email@163.com' # Replace with your email
  smtp_port: 465
  password: "YOUR_EMAIL_APP_PASSWORD" # Replace with your email app password
  to_addr: "recipient_email@example.com" # Replace with recipient email

# Strategy-specific configurations (these will override defaults in strategy files)
strategies:
  东方财富短线策略: # Matches STRATEGY_NAME in strategy/my_short_term_strategy.py
    min_avg_daily_turnover_amount: 80000000 # Example: Override default
    ma5_cross_ma10_period: 4 # Example: Override default
    # You can override any parameter defined in DEFAULT_STRATEGY_CONFIG for this strategy
    # volume_ratio_to_5day_avg_min: 1.6
    # rsi_upper_limit: 65

  涨停板次日溢价: # Matches STRATEGY_NAME in newStrategy/limit_up.py
    min_turnover_rate: 6.0 # Example: Specific setting for this strategy

enabled_strategies:
  - 东方财富短线策略 # This is the display name, not the module name
  - 涨停板次日溢价   # This is the display name
  # Add other strategies you want to enable here by their STRATEGY_NAME

# Other general settings
run_limit_up_backtest: true # Set to false if you don't want to run the limit_up backtest